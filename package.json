  },
  "dependencies": {
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "kysely": "^0.28.3",
    "pg": "^8.16.3",
    "winston": "^3.17.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.15",
    "@types/pg": "^8.15.4",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "kysely-codegen": "^0.18.5",
    "kysely-ctl": "^0.13.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
