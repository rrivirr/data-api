{
  "name": "data-api",
  "description": "rriv data api",
  "repository": "https://github.com/rrivirr/data-api.git",
  "author": "RRIV Engineers",
  "type": "module",
  "scripts": {
    "introspect": "kysely-codegen --dialect postgres --out-file ./infra/db/db.types.ts --include-pattern Events",
